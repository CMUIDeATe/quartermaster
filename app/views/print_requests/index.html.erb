<p>
  <%= link_to 'Create New Request', new_print_request_path, class: 'btn btn-primary' %>
</p>

<div class="table-responsive">
  <table class="table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>Requestor</th>
    <th>File</th>
    <th>Submitted</th>
    <th>Due</th>
    <th colspan="2">Status</th>
    <th></th>
  </tr>
  <% @requests.each do |request| %>
    <tr>
      <th>
        <%= link_to request.id, request %>
      </th>
      <td>
        <%= request.user.andrewid %>
      </td>
      <td>
        <%= link_to request.print_file.url do %>
          <span class="glyphicon glyphicon-download-alt"></span>
          <%= request.print_file_file_name %>
        <% end %>
      </td>
      <td>
        <%= request.created_at.strftime("%a %-d %b %H:%M") %>
      </td>
      <td>
        <%= request.due_at.strftime("%a %-d %b %H:%M") %>
      </td>
      <%# TODO: Actually have real status of print jobs. %>
      <td style="width: 20%">
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 50%">
            Status
          </div>
        </div>
      </td>
      <th>
        <small>
          <%= Time.now.strftime("%a %-d %b %H:%M") %>
        </small>
      </th>
      <td>
        <%= link_to 'Details', request %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
