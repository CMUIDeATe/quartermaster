<%# TODO: Make these Bootstrappy form groups and input groups. %>
<div class="page-header">
  <h1>Print Request #<%= @request.id %></h1>
</div>

<div class="table-responsive">
  <table class="table">
    <tr>
      <th>User:</th>
      <td><%= @request.user.email %></td>
    </tr>
    <tr>
      <th>File:</th>
      <td><%= link_to @request.print_file_file_name, @request.print_file.url %></td>
    </tr>
    <tr>
      <th>Quantity:</th>
      <td><%= @request.quantity %></td>
    </tr>
    <tr>
      <th>Volume:</th>
      <td><%= @request.volume %></td>
    </tr>
    <tr>
      <th>Quoted price:</th>
      <td></td>
    </tr>
    <tr>
      <th>Notes:</th>
      <td><%= @request.notes %></td>
    </tr>
    <tr>
      <th colspan='2'>
        <%= link_to 'Edit print request', edit_print_request_path(@request), class: 'btn btn-primary' %>
        <%= link_to 'Cancel print request', @request, method: :delete, data: {confirm: 'Are you sure you want to cancel this print request?'},  class: 'btn btn-danger' %>
      </th>
    </tr
  </table>
</div>

