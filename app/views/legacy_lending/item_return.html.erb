<div class="row">
  <div class="col col-md-12">
    <%= render partial: 'scan_input', locals: { card_input_only: false, redirect_action: 'item_return', reset_url: lending_return_url } %>
  </div>
</div>

<div class="row">
  <div class="col col-md-12">
    <% if @card_andrewid.present? %>
      <p>
        Scan items below to mark for return, then <b>Submit</b>.
      </p>
      <iframe name="item_return_rapid" src="<%= ENV['ZOHO_ITEM_RETURN_URL'] %>?aid_post=<%= @card_andrewid %>&sig_post=<%= current_user.andrewid %>" width="100%" height="1000px" frameborder="0" scrolling="auto"></iframe>
    <% elsif @scan_input.present? %>
      <p>
        Continue scanning items below to mark for anonymous return, then <b>Submit</b>.
      </p>
      <iframe name="item_return_rapid" src="<%= ENV['ZOHO_ITEM_RETURN_URL'] %>?item_post=<%= CGI.escape(@scan_input) %>&sig_post=<%= current_user.andrewid %>" width="100%" height="1000px" frameborder="0" scrolling="auto"></iframe>
    <% else %>
      <p>
        To initiate returns, tap an ID card above, or scan an item for anonymous return.
      </p>
    <% end %>
  </div>
</div>
