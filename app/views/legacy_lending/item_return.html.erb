<div class="row">
  <div class="col col-md-12">
    <%= render partial: 'card_input', locals: { redirect_action: 'item_return', reset_url: lending_return_url, placeholder: 'Tap ID card to search by patron...' } %>
  </div>
</div>

<div class="row">
  <div class="col col-md-12">
    <p>
      Use <b>Edit</b> to complete a return.
      <b>Search</b> by any field<% if @card_andrewid.nil? %>, or tap an ID card above<% end %>.
      To create a new transaction, use the <%= link_to 'Lend item', lending_lend_url %> page.
    </p>
    <%= render partial: 'app_upgrades' %>
  </div>
</div>

<div class="row">
  <div class="col col-md-12">
    <% if @card_andrewid.nil? %>
      <iframe src="<%= ENV['ZOHO_ITEM_RETURN_URL'] %>" width="100%" height="1000px" frameborder="0" scrolling="auto"></iframe>
    <% else %>
      <iframe src="<%= ENV['ZOHO_ITEM_RETURN_URL'] %>?co_aid=<%= @card_andrewid %>" width="100%" height="1000px" frameborder="0" scrolling="auto"></iframe>
    <% end %>
  </div>
</div>
