<div class="page-header">
  <h1><%= @item.name %></h1>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th>Barcode ID</th>
      <td><%= @item.barcode %></td>
    </tr>
    <tr>
      <th>Tags</th>
      <td>
        <%= @item.tags.map {|tag| link_to tag.name, tag_path(tag.id)}.join(', ').html_safe %>
      </td>
    </tr>
    <tr>
      <th>Types</th>
      <td>
        <%= @item.types.map {|type| link_to type.name, type_path(type.id)}.join(', ').html_safe %>
      </td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @item.description %></td>
    </tr>
    <tr>
      <th>Current Quantity</th>
      <td><%= @item.current_quantity %></td>
    </tr>
    <tr>
      <th>Minimum Quantity</th>
      <td><%= @item.minimum_quantity %></td>
    </tr>
    <tr>
      <th>Sale Price</th>
      <td><%= @item.sale_price %></td>
    </tr>
    <tr>
      <th>Notes</th>
      <td><%= @item.notes %></td>
    </tr>
  </table>
</div>

<p>
  <%= link_to 'All items', items_path %>
</p>
